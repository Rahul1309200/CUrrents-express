        let events = [];

    // DOM Elements
    const eventModal = document.getElementById('event-modal');
    const eventForm = document.getElementById('event-form');
    const modalTitle = document.getElementById('modal-title');
    const eventList = document.getElementById('event-list');
    const notification = document.getElementById('notification');

    const eventIdInput = document.getElementById('event-id');
    const eventNameInput = document.getElementById('event-name');
    const eventDateInput = document.getElementById('event-date');
    const eventTimeInput = document.getElementById('event-time');
    const eventLocationInput = document.getElementById('event-location');
    const eventDescriptionInput = document.getElementById('event-description');
    const eventImageUrlInput = document.getElementById('event-image-url');
    const eventRegistrationUrlInput = document.getElementById('event-registration-url');

    const addEventButton = document.getElementById('add-event-button');
    const editButton = document.getElementById('edit-button');
    const closeModalButton = document.getElementById('close-modal');
    const cancelButton = document.getElementById('cancel-button');
    const exportToPanacheButton = document.getElementById('export-to-panache');

    // Fetch all events from MongoDB
    async function fetchEvents() {
        try {
            const response = await fetch('http://localhost:5000/api/events');
            const data = await response.json();
            events = data;
            renderEventList();
        } catch (error) {
            console.error("Failed to load events:", error);
        }
    }

    function renderEventList() {
        eventList.innerHTML = '';
        events.forEach(event => {
            const eventItem = document.createElement('div');
            eventItem.className = 'event-item';
            eventItem.innerHTML = `
                <div>
                    <strong>${event.name}</strong>
                    <div>${formatDate(event.date)} at ${event.time}</div>
                </div>
                <div class="event-item-actions">
                    <button onclick="editEvent('${event._id}')">‚úèÔ∏è</button>
                    <button onclick="deleteEvent('${event._id}')">üóëÔ∏è</button>
                </div>
            `;
            eventList.appendChild(eventItem);
        });

        const counter = document.querySelector('#manage-events-widget .widget-counter');
        counter.textContent = events.length;
    }

    function formatDate(dateString) {
        const date = new Date(dateString);
        return date.toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' });
    }

    function setupEventListeners() {
        addEventButton.addEventListener('click', () => openModal());
        closeModalButton.addEventListener('click', closeModal);
        cancelButton.addEventListener('click', closeModal);
        exportToPanacheButton.addEventListener('click', () => {
            localStorage.setItem('panacheEvents', JSON.stringify(events));
            notification.classList.add('show');
            setTimeout(() => notification.classList.remove('show'), 3000);
        });

        window.editEvent = editEvent;
        window.deleteEvent = deleteEvent;
    }

    function openModal(eventId = null) {
        if (eventId) {
            const event = events.find(e => e._id === eventId);
            if (event) {
                modalTitle.textContent = 'Edit Event';
                eventIdInput.value = event._id;
                eventNameInput.value = event.name;
                eventDateInput.value = event.date;
                eventTimeInput.value = event.time;
                eventLocationInput.value = event.location;
                eventDescriptionInput.value = event.description;
                eventImageUrlInput.value = event.imageUrl;
                eventRegistrationUrlInput.value = event.registrationUrl;
            }
        } else {
            modalTitle.textContent = 'Add New Event';
            eventForm.reset();
            eventIdInput.value = '';
        }
        eventModal.style.display = 'flex';
    }

    function closeModal() {
        eventModal.style.display = 'none';
    }

    function editEvent(eventId) {
        openModal(eventId);
    }

    async function deleteEvent(eventId) {
        if (confirm('Are you sure you want to delete this event?')) {
            try {
                const response = await fetch(`http://localhost:5000/api/events/${eventId}`, {
                    method: 'DELETE',
                });

                const result = await response.json();
                if (response.ok) {
                    alert(result.message);
                    fetchEvents(); // Refresh list
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert('Failed to delete event');
            }
        }
    }

    // Submit new event
    eventForm.addEventListener('submit', async function (e) {
        e.preventDefault();

        const newEvent = {
            name: eventNameInput.value,
            date: eventDateInput.value,
            time: eventTimeInput.value,
            location: eventLocationInput.value,
            description: eventDescriptionInput.value,
            imageUrl: eventImageUrlInput.value || 'https://default.com/default.jpg',
            registrationUrl: eventRegistrationUrlInput.value
        };

        try {
            const response = await fetch('http://localhost:8080/api/events', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(newEvent)
            });

            const result = await response.json();

            if (response.ok) {
                alert(result.message);
                eventForm.reset();
                closeModal();
                fetchEvents(); // Reload after new add
            } else {
                alert('Error: ' + result.error);
            }

        } catch (err) {
            console.error('Fetch error:', err);
            alert('Failed to submit event');
        }
    });

    // Init
    setupEventListeners();
    fetchEvents();
    </script>
